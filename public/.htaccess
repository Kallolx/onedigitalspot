# Cleaned .htaccess - Apache 2.4+ compatible
# - Keeps SPA routing
# - Uses modern access controls (no Order/Deny)
# - Adds conservative CSP that explicitly allows tawk.to widget

RewriteEngine On

# Redirect to HTTPS if not already (optional on hosts that manage SSL)
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Serve index.html for SPA routes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]

# Essential security headers (adds tawk.to where needed)
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set X-XSS-Protection "1; mode=block"

    # Content-Security-Policy: allow tawk.to scripts, frames and websockets
    Header always set Content-Security-Policy "default-src 'self' https: data: blob:; script-src 'self' 'unsafe-inline' https://embed.tawk.to https://*.tawk.to https://cdn.tawk.to https:; connect-src 'self' https: wss://*.tawk.to https://*.tawk.to https://cdn.tawk.to; frame-src https://embed.tawk.to https://*.tawk.to; img-src 'self' data: https: blob:; style-src 'self' 'unsafe-inline' https:; font-src 'self' https: data:;"

    # Keep Permissions-Policy minimal (adjust if needed)
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=()"
</IfModule>

# Deny access to sensitive file types (Apache 2.4+)
<FilesMatch "\.(env|git|htaccess|htpasswd|ini|log|sh|sql|inc|bak|backup|swp|tmp)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        # Fallback for very old Apache versions
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Disable directory listing
Options -Indexes

# Basic compression (if available)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json
    Header append Vary User-Agent
</IfModule>

# Asset caching (keep short for HTML/JSON)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/html "access plus 1 hour"
    ExpiresByType application/json "access plus 1 hour"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/* "access plus 1 month"
    ExpiresByType font/* "access plus 1 year"
</IfModule>

# Cache control for static assets
<IfModule mod_headers.c>
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
</IfModule>

# Custom error pages (optional)
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

FileETag None

# Language preference (optional)
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP:Accept-Language} ^bn [NC]
    RewriteRule ^$ /bn/ [R=302,L]
</IfModule>

# End of cleaned .htaccess
